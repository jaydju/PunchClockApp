<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/white"
    tools:context=".createRoom"
    android:orientation = "vertical">

    <LinearLayout
        android:layout_marginTop = "12dp"
        android:layout_marginRight = "4dp"
        android:layout_marginLeft = "4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal">
        <TextView
            android:textSize = "24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Title: "/>

        <EditText
        android:id = "@+id/room_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint= "Type text here"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop = "12dp"
        android:layout_marginRight = "4dp"
        android:layout_marginLeft = "4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal">
        <TextView
            android:textSize = "24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Date: "/>
        <TextView
            android:id = "@+id/chosen_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = ""
            android:textSize = "20sp"/>
    </LinearLayout>
    <Button
        android:id = "@+id/date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Date"
        android:textColor = "@color/white"
        android:onClick = "setDate"
        android:textSize = "10sp" />
    <LinearLayout
        android:layout_marginTop = "12dp"
        android:layout_marginRight = "4dp"
        android:layout_marginLeft = "4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation = "horizontal">
        <TextView
            android:textSize = "24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Time: "/>
        <TextView
            android:id = "@+id/chosen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = ""
            android:textSize = "20sp"/>
    </LinearLayout>
    <Button
        android:id = "@+id/time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Time"
        android:textColor = "@color/white"
        android:onClick = "setTime"
        android:textSize = "10sp" />


    <TextView
        android:id = "@+id/string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textSize = "36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textColor = "@color/white"
        android:text = "Generate Number"
        android:onClick = "generateNumber"
        />
    <Button
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textColor = "@color/white"
        android:text = "Push to Firebase"
        android:onClick = "sendToFirebase"
        />
    </LinearLayout>
</LinearLayout>